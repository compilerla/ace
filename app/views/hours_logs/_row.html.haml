- uuid = Time.now.to_i
%tr
  %td{style: 'width:20%;'}
    = select_tag "typeweeks[#{uuid}][log_type]", options_for_select(HoursLog.formatted_types), class: 'form-control'

  = render partial: 'hours_logs/field_cols', locals: { hours_type: hours_type, uuid: uuid, week_start: week_start }
  
  - if true
    %td
      .btn.btn-sm.btn-danger.remove-row-button Remove row