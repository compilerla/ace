.navbar.navbar-default
  .container-fluid
    .navbar-header
      .navbar-brand= link_to 'American Conservation Experience', '/'

    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to "Log out", destroy_user_session_path(method: :delete)
        - else
          %li= link_to "Log in", new_user_session_path

.container
  .row
    .col-sm-12
      - if flash[:danger].present?
        .alert.alert-danger= flash[:danger]
      - if flash[:notice].present?
        .alert.alert-info= flash[:notice]

  .row
    .col-md-12
      .page-header
        %h2 Dashboard

  .row
    .col-md-12
      %h3 Example project
      %br 
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %strong #{@week_start.strftime("%B %d, %Y")} - #{(@week_start + 6.days).strftime("%B %d, %Y")}
          .label.label-default 
        = form_tag hours_logs_path, id: 'submission_period' do
          .panel-body
            %table.table
              %thead
                - ['Log type', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday', 'Total', ''].each do |day|
                  %th= day

              %tbody
                = render partial: 'hours_logs/row', locals: { week_start: @week_start, hours_type: 'lunch' }
                        
                %tr
                  %td
                  - (0..6).each do
                    %td
                      %strong 0 hours
                  %td
                  %td.text-right{colspan: 9}
                    = link_to "Add row", create_row_hours_logs_path, class: 'btn btn-sm btn-default', remote: true, method: :post

            .col-md-12
              = submit_tag 'Submit hours', class: 'btn btn-primary'

:javascript
  $(document).ready(function(){
    $('#submission_period').on('click', '.remove-row-button', function(){
      $(this).closest('tr').remove();
    });
  });
